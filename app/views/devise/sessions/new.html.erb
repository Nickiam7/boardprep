<h2>Log in</h2>

 <div class="ui grid aligned center">	
  <div class="ten wide column">
	<div class="ui segment stacked">

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="ui form">
	  	<div class="field">
	  		<%= f.email_field :email, placeholder: 'Enter Email', autofocus: true %>
	  	</div>
	 </div>
	<div class="ui form">
		<div class="field">
	    	<%= f.password_field :password, placeholder: 'Enter Password', autocomplete: "off" %>
	    </div>
	</div>
	<div class="ui form">
		<div class="field">
		  <% if devise_mapping.rememberable? -%>
		  <div><%= f.submit "Log in", class: 'ui button green tiny' %>
		  <% end -%>
		  <%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		  <% end %>
		</div>
	</div>

  </div>
 </div>
</div>

<%= render "devise/shared/links" %>
