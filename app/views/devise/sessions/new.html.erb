  <div class="five wide column">
  	<img src="http://ache.org/images/logo.png" class="image" />
	 <div class="ui segment stacked">
	  <div class="lgn">
		  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	    <div class="ui form">
	  	  <div class="field">
	  		<%= f.email_field :email, placeholder: 'Enter Email', autofocus: true %>
	  	  </div>
	    </div>
		<div class="ui form">
			<div class="field">
		    	<%= f.password_field :password, placeholder: 'Enter Password', autocomplete: "off" %>
		    </div>
		</div>
		<div class="ui form">
			<div class="field">
			  <br>
			   <% if devise_mapping.rememberable? -%>
			  <div><%= f.submit "Log in", class: 'ui button green small fluid' %></div>
			   <% end -%>
	          <br>
			  <div class="ui toggle checkbox"><%= f.check_box :remember_me %><%= f.label :remember_me %></div>
			   <% end %>
			</div>
		</div>

      </div>
    </div>
  </div>
<%= render "devise/shared/links" %>
