<div class="five wide column">
	<img src="http://ache.org/images/logo.png" class="image" />
 <div class="ui segment stacked">
  <div class="lgn">
	  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>	    
	  <%= devise_error_messages! %>	
	  <div class="ui form">
	  	<div class="field">
	     <%= f.email_field :email, placeholder: 'Enter Email', autofocus: true %>
	 	</div>
	  </div>
	  <div class="ui form">
	  	<div class="field">
	     <%= f.password_field :password, placeholder: 'Enter Password', autocomplete: "off" %>
		</div>
	  </div>
	  <div class="ui form">
	  	<div class="field">
	     <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', autocomplete: "off" %>
	    </div> 
	  </div>
	  <div class="ui form">
	  	<div class="field">
	  	 <%= f.submit "Sign up", class: 'ui button green small fluid' %>
	    </div>
	  </div>
	<% end %>
  </div>
 </div>
</div>
<%= render "devise/shared/links" %>
