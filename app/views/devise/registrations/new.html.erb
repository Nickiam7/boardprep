<h2>Sign up</h2>

 <div class="ui grid aligned center">	
  <div class="ten wide column">
	<div class="ui segment stacked">

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<div class="ui message red">
		  <%= devise_error_messages! %>
		</div>  
		  <div class="ui form">
		  	<div class="field">
		     <%= f.email_field :email, placeholder: 'Enter Email', autofocus: true %>
		 	</div>
		  </div>

		  <div class="ui form">
		  	<div class="field">
		     <%= f.password_field :password, placeholder: 'Enter Password', autocomplete: "off" %>
			</div>
		  </div>

		  <div class="ui form">
		  	<div class="field">
		     <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', autocomplete: "off" %>
		    </div> 
		  </div>

		  <div class="ui form">
		  	<div class="field">
		  	 <%= f.submit "Sign up", class: 'ui button green mini' %>
		    </div>
		  </div>
		<% end %>

   </div>
 </div>
</div>

<%= render "devise/shared/links" %>
